#############################################
# Free-Yangmao 环境配置示例
# 复制此文件为 .env 并根据需要修改
#############################################

#=========== 时间配置 ============
# 查询最近N天的提交历史
DAYS_AGO=90

# 最多提取的资源数量
MAX_RESOURCES=15

#=========== GitHub API 配置 ============
# GitHub仓库（格式：owner/repo）
GITHUB_REPO=ripienaar/free-for-dev

# GitHub API Token（可选，用于提高API限流）
# 获取方式：https://github.com/settings/tokens
# GITHUB_TOKEN=your_token_here

#=========== 功能开关 ============
# 是否启用链接验证（可能较慢）
ENABLE_LINK_VALIDATION=true

# 是否启用系统通知（仅macOS）
ENABLE_NOTIFICATIONS=true

# 是否自动更新本地仓库副本
ENABLE_GIT_UPDATE=false

#=========== 日志配置 ============
# 日志级别: DEBUG, INFO, WARN, ERROR
LOG_LEVEL=INFO

#=========== 高级配置 ============
# API请求超时时间（秒）
API_TIMEOUT=30

# 链接验证并发数
LINK_CHECK_CONCURRENCY=5

# 每页获取的提交数量
PER_PAGE=100
